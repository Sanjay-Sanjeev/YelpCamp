<% include ../partials/header %>
    
    <div class="container">
    
        <div class="row">
        
            <h1 style="text-align: center">Edit <%= ground.name%></h1>
            <div style="width: 30%; margin:25px auto">
                <form action="/campgrounds/<%=ground._id%>?_method=PUT" method="POST" >
                    
                    <div class="form-group">
                    <input class="form-control" type="text" name="ground[name]" value="<%= ground.name%>">
                    </div>
                    <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="ground[image]" value="<%= ground.image%>">
                    </div>
                    <div class="form-group" >
                    <input class="form-control" type="text" placeholder="Description" name="ground[description]" value="<%= ground.description%>">   
                    </div>
                    <div class="form-group">
                    <button class="btn btn-sm btn-success btn-block">Submit</button>
                    </div>
                </form>
                <a class="btn btn-sm btn-success btn-block" href="/campgrounds">Go BAck to CampGrounds!!</a>
            </div>
            
        </div>
    </div>
    
<% include ../partials/footer %>
